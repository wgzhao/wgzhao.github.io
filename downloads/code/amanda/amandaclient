# default: on
#
# description: The Amanda backup client should be enabled for systems
#              which will be backed up by an Amanda backup server.

service amanda
{
    disable     = no
    flags           = IPv6
    socket_type = stream
    protocol    = tcp
    wait        = no
    user        = amandabackup
    group       = disk
    groups      = yes
    server      = /usr/libexec/amanda/amandad
    server_args     = -auth=bsdtcp amdump
}
